<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <TextView
            android:id="@+id/tvHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="serif"
            android:text="@string/textview"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeadline"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:fontFamily="serif"
            android:text="@string/textview"
            android:textColor="@color/darkest_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSource"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:fontFamily="serif"
            android:text="@string/textview"
            android:textColor="@color/darkest_gray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeadline"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="10dp"
            android:tint="@color/darkest_gray"
            app:srcCompat="@drawable/ic_share_black_18dp" />

        <ImageView
            android:id="@+id/btnLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeadline"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="17dp"
            android:layout_toStartOf="@+id/btnShare"
            android:tint="@color/darkest_gray"
            app:srcCompat="@drawable/ic_public_black_18dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>